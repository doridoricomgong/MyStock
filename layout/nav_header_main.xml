<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    a:layout_width="match_parent"
    a:layout_height="@dimen/nav_header_height"
    a:background="@drawable/side_nav_bar"
    a:gravity="bottom"
    a:orientation="vertical"
    a:paddingBottom="@dimen/activity_vertical_margin"
    a:paddingLeft="@dimen/activity_horizontal_margin"
    a:paddingRight="@dimen/activity_horizontal_margin"
    a:paddingTop="@dimen/activity_vertical_margin"
    a:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        a:id="@+id/imageView"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:paddingTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        a:id="@+id/app_name"
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:paddingTop="@dimen/nav_header_vertical_spacing"
        a:text="@string/link"
        a:autoLink="web"
        a:linksClickable="true"
        a:textColorLink="#ffffff"
        a:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        a:id="@+id/textView"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:text="@string/mail"
        a:autoLink="email"
        a:textColorLink="#ffffff"/>

</LinearLayout>
