<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
    a:layout_width="match_parent"
    a:layout_height="wrap_content"
    a:paddingTop="@dimen/activity_horizontal_margin"
    a:paddingBottom="@dimen/activity_horizontal_margin"
    a:orientation="horizontal"
    a:weightSum="2">

    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="match_parent"
        a:layout_weight="1">

        <TextView
            a:id="@+id/interest_list_title"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            a:textColor="@android:color/black"
            a:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        a:layout_width="match_parent"
        a:layout_height="wrap_content"
        a:paddingRight="@dimen/activity_horizontal_margin"
        a:layout_weight="1"
        a:orientation="vertical">

        <LinearLayout
            a:layout_width="match_parent"
            a:layout_height="wrap_content"
            a:gravity="right"
            a:orientation="horizontal" >

            <TextView
                a:id="@+id/interest_price"
                a:layout_width="wrap_content"
                a:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>
    <Button
        a:id="@+id/interest_remove"
        a:layout_width="wrap_content"
        a:layout_height="wrap_content"
        a:layout_alignParentRight="true"
        a:background="#00ff0000"
        a:minHeight="0dp"
        a:minWidth="0dp"
        a:text="@string/remove"
        a:paddingRight="@dimen/activity_horizontal_margin"
        a:layout_gravity="center_vertical"/>
</LinearLayout>
